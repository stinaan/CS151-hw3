import java.awt.*;
import java.awt.event.ActionListener;

import javax.swing.*;

public class ZoomTester {

	public static void main(String[] args)
	{
		JFrame frame = new JFrame();
		
		final int buttonSize = 15;
		JButton inButton = new JButton("Zoom in");
		JButton outButton = new JButton("Zoom out");
		
		
		//Icon icon = new CarIcon(10);
		JLabel car = new JLabel(new CarIcon(10));
		frame.setLayout(new FlowLayout());
		
		frame.add(inButton);
		frame.add(outButton);
		frame.add(car);
		
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.pack();
		frame.setVisible(true);
		
	}
	
	public static ActionListener createButtonListener(final double arg)
	{
		return new
		ActionListener(){
			
		}
	}
	
}
